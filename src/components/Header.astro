---
import Navigation from "../components/Navigation.astro";
---

<header class="full-bleed background-fill">
  <section class="siteHeader">
    <div class="siteTitle">
      <a class="homeLink" href="/">
        <h1>Chris Zombik</h1>
      </a>
      <h2>Author & Educator</h2>
    </div>
    <div class="navLinks">
      <Navigation />
    </div>
  </section>
</header>

<style>
  header {
    display: grid;
    grid-template-columns:
      1fr
      min(90ch, 100%)
      1fr;
    margin-top: 1em;
    border-top: 1px solid var(--dark-liver);
    border-bottom: 1px solid var(--dark-liver);
  }
  .siteHeader {
    display: flex;
    justify-content: flex-end;
    grid-column-start: 2;
  }

  .navLinks {
    margin-left: auto;
    margin-top: auto;
  }

  h1 {
    font-variant: small-caps;
    font-size: 24pt;
    font-weight: bold;
  }

  h2 {
    font-style: italic;
  }

  .siteTitle {
    margin-top: auto;
  }

  .homeLink,
  .homeLink:visited {
    text-decoration: none;
    color: inherit;
  }

  @media screen and (min-width: 320px) and (max-width: 680px) {
    header {
      display: flex;
    }
  }
</style>
