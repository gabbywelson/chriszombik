---
import Navigation from "../components/Navigation.astro";
---

<header class="siteHeader">
  <div>
    <a class="homeLink" href="/">
      <h1 class="siteTitle">Chris Zombik</h1>
    </a>
  </div>
  <div class="navLinks">
    <Navigation />
  </div>
</header>

<style>
  .siteHeader {
    display: flex;
    justify-content: end;
  }

  .navLinks {
    margin-left: auto;
  }

  .siteTitle {
    font-variant: small-caps;
  }

  .homeLink,
  .homeLink:visited {
    text-decoration: none;
    color: inherit;
  }
</style>
