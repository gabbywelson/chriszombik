---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";
import chris from "../images/chris.jpg";
import UpcomingBook from "../components/UpcomingBook.astro";
import RecentPosts from "../components/RecentPosts.astro";
import SignupForm from "../components/SignupForm.astro";
---

<BaseLayout pageTitle={pageTitle}>
  <section>
    <div class="welcome">
      <div class="intro">
        <h3>ðŸ‘‹ Hi there, I'm Chris Zombik!</h3>
        <p class="subIntro">
          I'm excited to introduce you to my books and writing
        </p>
        <p>
          My first novel is (very nearly!) finished and I'm especially
          interested in connecting with literary agents, fellow novelists,
          editors, and beta readers.
        </p>
      </div>
    </div>
    <SignupForm />
    <RecentPosts />
  </section>
  <aside>
    <img src={chris} alt="a picture of the author" />
    <UpcomingBook />
  </aside>
</BaseLayout>

<style>
  aside {
    margin-left: 4em;
  }

  img {
    max-width: 150px;
    border-radius: 100%;
  }

  .welcome {
    display: flex;
  }

  .intro {
    margin-left: 1em;
  }

  .intro h3 {
    font-weight: bold;
    font-size: 20pt;
  }

  .intro p {
    font-size: 16pt;
  }

  .subIntro {
    font-style: italic;
    font-size: 14pt;
  }
</style>
